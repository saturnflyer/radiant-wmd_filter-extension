<% content_for :page_css do %>
#filter_preview {
  border-color: #CDC295;
  border-style: solid;
  border-width: 0 1px 1px;
  padding: 5px;
  background: #fff;
  color: inherit;
  clear: both;
}
<% end %>
<% content_for :page_scripts do %>
    wmd_options = {
		output: "<%= config['wmd.output']%>",
		lineLength: <%= config['wmd.lineLength']%>,
		buttons: "<%= config['wmd.buttons']%>",
		autostart: <%= config['wmd.autostart']%>
	};
<% end %>
<%# The javascripts must appear *after* the options object is created for the options to take affect %>
<%= javascript_include_tag 'extensions/wmd_filter/wmd' %>
<%= javascript_include_tag 'extensions/wmd_filter/wmd_filter' %>
