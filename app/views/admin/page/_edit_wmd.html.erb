<% content_for :page_css do %>
#wmd-preview {
  border-color: #CDC295;
  border-style: solid;
  border-width: 0 1px 1px;
  padding: 20px;
  background: white;
  color: inherit;
  clear: both;
}
<% end %>
<% content_for :page_scripts do %>
	// to set WMD's options programatically, define a "wmd_options" object with whatever settings
	// you want to override.  Here are the defaults:
    wmd_options = {
		// format sent to the server {HTML|Markdown}.  Use "HTML" to return the markdown source.
		output: "Markdown",
		
		// line wrapping length for lists {40}, blockquotes, etc.
		lineLength: 60,

		// toolbar buttons.  Undo and redo get appended automatically.
		buttons: "bold italic | link blockquote code image | ol ul heading hr",

		// option to automatically add WMD to the first textarea found.  See apiExample.html for usage.
		autostart: true
	};
<% end %>
<br class="clear"/>
<div class="tabs" id="tabs"><span class="tab here">preview</span></div>
<div id="wmd-preview" class="wmd-preview">THE PREVIEW WILL APPEAR HERE</div>
<%# The javascripts must appear *after* the options object is created for the options to take affect %>
<%= javascript_include_tag 'extensions/wmd_filter/wmd_filter' %>
<%= javascript_include_tag 'extensions/wmd_filter/wmd' %>
